    {
      "parameters": {
        "jsCode": "const airdrops = $input.first().json.bestAirdrops;\n\nlet message = 'üöÄ *Melhores Airdrops do Dia*\\n\\n';\n\nairdrops.forEach((airdrop, index) => {\n  message += `${index + 1}. *${airdrop.name}*\\n`;\n  message += `üí∞ Valor: ${airdrop.value}\\n`;\n  message += `‚õìÔ∏è Chain: ${airdrop.chain || 'Multi'}\\n`;\n  message += `üìä Status: ${airdrop.status}\\n`;\n  if (airdrop.deadline) {\n    message += `‚è∞ Deadline: ${airdrop.deadline}\\n`;\n  }\n  message += '\\n';\n});\n\nmessage += '_Atualizado via DeFiLlama MCP_';\n\nreturn { message };"
      },
      "id": "format-message",
      "name": "Format WhatsApp Message",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "url": "http://localhost:8080/message/sendText/minha-instancia",
        "options": {
          "headers": {
            "apikey": "SUA_API_KEY_AQUI"
          },
          "bodyContentType": "json",
          "jsonBody": "{\n  \"number\": \"5511999999999\",\n  \"text\": \"{{ $json.message }}\"\n}"
        },
        "method": "POST"
      },
      "id": "send-whatsapp",
      "name": "Send to WhatsApp",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [900, 300]
    }
  ],
  "connections": {
    "Schedule Every 6h": {
      "main": [
        [
          {
            "node": "Get Best Airdrops",
